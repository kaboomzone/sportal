    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
    <style>
      @charset "UTF-8";
      /*=============== GOOGLE FONTS ===============*/
      @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap");
      /*=============== VARIABLES CSS ===============*/
      :root {
        /*========== Colors ==========*/
        /*Color mode HSL(hue, saturation, lightness)*/
        --first-color: hsl(244, 75%, 57%);
        --second-color: hsl(249, 64%, 47%);
        --title-color: hsl(244, 12%, 12%);
        --text-color: hsl(244, 4%, 36%);
        --body-color: hsl(208, 97%, 85%);
        /*========== Font and typography ==========*/
        /*.5rem = 8px | 1rem = 16px ...*/
        --body-font: "Poppins", sans-serif;
        --h2-font-size: 1.25rem;
        --small-font-size: .813rem;
        --smaller-font-size: .75rem;
        /*========== Font weight ==========*/
        --font-medium: 500;
        --font-semi-bold: 600;
      }
      @media screen and (min-width: 1024px) {
        :root {
          --h2-font-size: 1.75rem;
          --normal-font-size: 1rem;
          --small-font-size: .875rem;
          --smaller-font-size: .813rem;
        }
      }




      .navbar-nav.nav-link {
        color: #fff!important;
      }
      
      .welcome-text {
        color: #fff;
      }

      body {
        background-color: var(--body-color);
        font-family: var(--body-font);
        color: var(--text-color);
        background-image: url('https://res.cloudinary.com/dbtkas8kr/image/upload/v1716962731/3d-vertical-background-with-abstract-style_ygrqqb.jpg');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center center;
      }
      
      .navbar {
        background: linear-gradient(to right, #00719C, #00719C)!important;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
        margin-bottom: 100px;
      }
      .card-container {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
      }
      
      .card {
        background-color: #e2d4f7;
        padding: 20px;
        border-radius: 10px;
        width: 80vh;

        background: rgba(230, 213, 213, 0.45);
        border-radius: 16px;
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.3);
        backdrop-filter: blur(9.4px);
        -webkit-backdrop-filter: blur(9.4px);
        border: 2px solid rgba(230, 213, 213, 0.96);
      }
      
      .welcome-text {
        color: var(--title-color);
        font-size: var(--small-font-size);
        font-weight: var(--font-semi-bold);
        margin-bottom: 0.25rem;
      }
      .wave {
        font-size: 36px;
        color: #fff;
        margin-left: 5px;
      }
      .card h1 {
        font-size: 36px;
        margin-bottom: 20px;
      }
      .card-body {
        padding: 20px;
      }
      
      .card-title {
        color: var(--title-color);
        font-size: var(--h2-font-size);
        margin-bottom: 0.5rem;
      }
      
      .card-text {
        color: var(--title-color);
        font-size: var(--small-font-size);
        font-weight: var(--font-semi-bold);
        margin-bottom: 2rem;
      }
      
      .card a {
        display: inline-block;
        padding: 10px 20px;
        background: linear-gradient(to right, #00719C, #00719C)!important;
        border:none;
        color: #fff;
        border-radius: 5px;
        text-decoration: none;
      }

      .btn1{
        display: inline-block;
        padding: 10px 20px;
        background: linear-gradient(to right, #00719C, #00719C)!important;
        border:none;
        color: #fff;
        border-radius: 5px;
        text-decoration: none;
      }
      
      .card a:hover {
        background-color: #0056b3;
      }


      .table-shadow {
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.514);
    border-radius: 5px;
    overflow: hidden;
    border: 3px solid #ffffff;

    background-color: #e2d4f7;
    padding: 20px;
    border-radius: 10px;
    color: black;

    background: rgba(230, 213, 213, 0.45);
    border-radius: 16px;
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.3);
    backdrop-filter: blur(9.4px);
    -webkit-backdrop-filter: blur(9.4px);
    border: 2px solid rgba(230, 213, 213, 0.96);
    

    }
.table-shadow th, .table-shadow td {
    color: #ffffff;
}

.navbar-toggler{
  &:focus {
    outline: none;
  }
}
    </style>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-light ">
    <button class="navbar-toggler border-0 shadow-none" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <i class="bi bi-list-nested"></i>
    </button>
    <h1 style="font-family: optima; color:#ffffff; font-size:25px;">SPORTAL</h1>
    
    <a class="nav-link p-2 ml-auto" href="/profile">
      <i class="fas fa-user-circle fa-lg" style="color: white;"></i>
    </a>
    
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link" href="/home">Home <span class="sr-only">(current)</span></a>
        <a class="nav-link" href="/marks">Marks</a>
        <a class="nav-link" href="/attendance">Attendance</a>
        <a class="nav-link active" href="/fees">Fees</a>
        <a class="nav-link" href="/course">Courses</a>
        <a class="nav-link" href="/about">About</a>
        <a class="nav-link" href="/logout">Logout</a>
      </div>
    </div>
  </nav>

      

      <div class="container">
          <div style="border-bottom: solid #fff 3px ; margin-left:100px; margin-right:100px; margin-top:30px; margin-bottom:30px;"></div>
        <h1 style="color: #fff; text-align:center;">Fees Details</h1>
        <div class="card-container">
            <div class="card">
            <form id="marks-form" action="/fees" method="POST">
                <div class="form-group">
                    <label style="color: #fff;" for="semester">Choose FeesType:</label>
                    <select id="feestype" name="feestype" class="form-control">
                        <option value="" selected disabled>Select Fees Type</option>
                        <option value="0">Tution Fee</option>
                        <option value="1">Hostel Fee</option>
                        <option value="2">Transport Fee</option>

                    </select>
                    <select class="disabled form-control" id="year" name="year" style="margin-top:20px;">
                      <option value="" selected disabled>Select Year</option>
                      <option value="1">1</option>
                      <option value="2">2</option>
                      <option value="3">3</option>
                      <option value="4">4</option>
                  </select>
                </div>
                <button type="submit" id="submitBtn" name="submitBtn" class="btn btn-primary text-center disabled">Submit</button>
            </form>
            </div>
          </div>
        <% if (feesdetails && feesdetails.length > 0) { %>
        <table id="marks-table" class="table table-bordered table-shadow">
          <thead>
            <tr>
              <th>Year</th>
              <th>FeePaid</th>
              <th>FeeDue</th>
            </tr>
          </thead>
          <tbody>
              <% for (let mark of feesdetails) { %>
                  <tr>
                      <td><%= mark.year %> Year</td>
                      <td><%= mark.feespaid %></td>
                      <td><%= mark.feesdue %></td>
                  </tr>
              <% } %>
            </tbody>
            <tfoot>
            </tfoot>
          </table>
          <% } else { %>
            <div class="card-container">
              <div class="card">
                <p class="welcome-text text-center"><%= errormsg %></p>
              </div>
            </div>
          <% } %>
      </div>
<script>
  const dropdown2 = document.getElementById("year");
  document.addEventListener('DOMContentLoaded', (event) => {
    const dropdown = document.getElementById("feestype");
    const submitBtn = document.getElementById("submitBtn");
    dropdown.addEventListener("change", function() {
      dropdown2.classList.remove("disabled");
    });
  });
    document.addEventListener('DOMContentLoaded', (event) => {
    const submitBtn = document.getElementById("submitBtn");
    dropdown2.addEventListener("change", function() {
      submitBtn.classList.remove("disabled");
    })
  });


</script>
      
</body>
</html>