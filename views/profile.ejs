        </button>
        
        <a class="nav-link p-2 ml-auto" href="/profile">
          <i class="fas fa-user-circle fa-lg"></i>
        </a>
        
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            <a class="nav-link active" href="/home">Home <span class="sr-only">(current)</span></a>
            <a class="nav-link" href="/marks">Marks</a>
            <a class="nav-link" href="/attendance">Attendance</a>
            <a class="nav-link" href="/fees">Fees</a>
            <a class="nav-link" href="/course">Courses</a>
            <a class="nav-link" href="/about">About</a>
            <a class="nav-link" href="/logout">Logout</a>
          </div>
        </div>
      </nav>
  <p style="color:#93c950; text-align:center;"><%= message %></p>
  <div class="profile-pic-container">
    <div class="profile-pic"></div>
    </div>
    <div class="content">
        <label for="user-id">User ID</label>
        <p id="user-id"><%= results.username %></p>

        <label for="name">Name</label>
        <p id="name"><%= results.name %></p>
        
        <label for="email">Email Address</label>
        <p id="email"><%= results.email %></p>
        
        <label for="phone">Phone</label>
        <p id="phone"><%= results.phone %></p>
        
        <label for="branch">Branch</label>
        <p id="branch"><%= results.branch %></p>
        
        <label for="section">Section</label>
        <p id="section"><%= results.section %> section</p>

        <label for="dob">Date of Birth</label>
        <p id="dob"><%= results.dob %></p>

        <label for="gender">Gender</label>
        <p id="gender"><%= results.gender %></p>
        
        <a href="#" data-toggle="modal" data-target="#changePasswordModal"><button class="update-button">Change Password</button></a>
        <a href="/logout"><button class="logout-button">Log Out</button></a>
        
    </div>
    <div class="modal fade" id="changePasswordModal" tabindex="-1" role="dialog" aria-labelledby="changePasswordModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="changePasswordModalLabel" style="color: #212529;">Change Password</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <form action="/changepassword" method="post">
                  <label for="currentPassword">Current Password</label>
                  <input type="password" class="form-control" id="currentPassword" name="currentPassword" placeholder="Enter current password">
                <div class="form-group">
                  <label for="newPassword">New Password</label>
                  <input type="password" class="form-control" id="newPassword" name="newPassword"placeholder="Enter new password">
                  <p id="errorMsg1"></p>
                </div>
                <div class="form-group">
                  <label for="confirmPassword">Confirm New Password</label>
                  <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Confirm new password">
                  <p id="errorMsg2"></p>
                </div>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary" id="saveBtn" disabled>Save changes</button>
  
              </form>
            </div>
            <div class="modal-footer">
            </div>
          </div>
        </div>
      </div>
      <script>
        const newPassword = document.getElementById('newPassword');
        const confirmPassword = document.getElementById('confirmPassword');
        const saveBtn = document.getElementById('saveBtn');


        document.addEventListener('DOMContentLoaded', (event) => {
            const newPassword = document.getElementById('newPassword');
            const confirmPassword = document.getElementById('confirmPassword');
            const saveBtn = document.getElementById('saveBtn');
            const errorMsg1 = document.getElementById('errorMsg1');
            const errorMsg2 = document.getElementById('errorMsg2');

            newPassword.addEventListener("input", function() {
                if(newPassword.value.length < 8){
                    errorMsg1.textContent = "Password must be 8 Charactrs"
                    errorMsg1.style.color = "red";
                }
                else{
                    errorMsg1.textContent = ""
                }
                if (newPassword.value === confirmPassword.value && confirmPassword.value !== '' && newPassword.value !== '') {
                    saveBtn.removeAttribute('disabled');
                } else {
                    saveBtn.setAttribute('disabled', 'disabled');
                }
            });
        
            confirmPassword.addEventListener("input", function() {
                if (newPassword.value === confirmPassword.value && confirmPassword.value !== '' && newPassword.value !== '' && newPassword.value.length >= 8) {
                    saveBtn.removeAttribute('disabled');
                    errorMsg2.textContent = "";
                } else {
                    saveBtn.setAttribute('disabled', 'disabled');
                    errorMsg2.textContent = "Password should be Match";
                    errorMsg2.style.color = "red";
                }
            });
        });
      </script>
</body>
